<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plz.config.mybatis.mapper.salesMapper">

	<sql id="sales-select-sql">
		select	res_id,
				total, 
				pay, 
				commission, 
				sales_date 
		from 	sales
	</sql>
	
	<!-- total 금액 합계 -->
	<select id="selectAllToTal" resultType="_int">
		select sum(total) from sales
	</select>
	
	<!-- 수수료 합계 -->
	<select id="selectAllCommission" resultType="_int">
		select sum(commission) from sales
	</select>
	
	<!-- sales테이블의 모든 내용 조회 -->
	<select id="selectAllSales" resultType="Sales">
		<include refid="sales-select-sql"/>
		order by sales_date desc
	</select>
	
	<!-- 기간별 조회 -->
	<select id="selectSalesByDate" parameterType="map" resultType="Sales">
		<include refid="sales-select-sql"/>
		where sales_date > #{sDay} and #{eDay} > sales_date
	</select>
	
	<!-- 예약 ID별 조회 -->
	<select id="selectSalesByResId" parameterType="string" resultType="Sales">
		<include refid="sales-select-sql"/>
		where res_id = #{value}
	</select>
	
	<insert id="insertSales" parameterType="sales">
		insert into sales values(#{res_id}, #{total}, #{pay}, #{commission}, #{sales_date})
	</insert>
	
	<update id="updateSales" parameterType="sales">
		update 	sales
		set 	total = #{total},
			    pay = #{pay},
			    commission = #{commission},
			    sales_date = #{salesDate}
		where 	res_id = #{resId}
	</update>
	
	<delete id="deleteSales" parameterType="string">
		delete from sales where res_id = #{resId} 
	</delete>
</mapper>