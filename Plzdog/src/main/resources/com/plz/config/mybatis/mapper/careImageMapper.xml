<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plz.config.mybatis.mapper.careImageMapper">
	
	<select id="selectCareImage">
		select care_image, care_id from care_image
	</select>

	<insert id="insertCareImage" parameterType="CareImage">
		insert into care_image values(#{careImage}, #{careId})
	</insert>
	
	<update id="updateCareImage" parameterType="CareImage">
		update	care_image
		set		care_image = #{careImage}
		where	care_id = #{careId}
	</update>
	
	<delete id="deleteCareImage" parameterType="string">
		delete from care_image where care_image = #{value}
	</delete>
</mapper>