	-->
	
	
	<!-- yoon gue seok -->
	<!-- 시터의 마이페이지 - 전체 의뢰 찾기  -->
	<select id="selectAllMemberReservationMember" parameterType="string" resultMap="simple-res-member-resultmap">
		<include refid="simple-sitter-res-member-sql"/>
